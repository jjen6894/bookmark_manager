<h1> All your links are belong to us </h1>

<ol id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url %>
      Tag: <% link.tags.each do |tag| %> <%= tag.name %><% end %>
    </li>
  <% end %>
</ol>

<form action='/links/new'>
  <input type='submit' value="Create new link" />
</form>
